modules = ["nodejs-20", "web"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
build = ["sh", "-c", "NODE_ENV=production npm run build"]
run = ["sh", "-c", "npm run preview -- --host 0.0.0.0 --port 5000"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Dev Server"

[[workflows.workflow]]
name = "Dev Server"
author = 39250447
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --host 0.0.0.0 --port 5000"

[[workflows.workflow]]
name = "Build"
author = 39250447
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=production npm run build"

[[workflows.workflow]]
name = "Deploy"
author = 39250447
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=production npm run build && npm run preview -- --host 0.0.0.0 --port 5000"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000
